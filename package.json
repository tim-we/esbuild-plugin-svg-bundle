{
  "name": "esbuild-plugin-svg-bundle",
  "version": "1.0.0",
  "description": "Bundle SVG imports into a single SVG file.",
  "main": "dist/bundle-svg.mjs",
  "files": [
    "dist/*"
  ],
  "types": "dist/bundle-svg.d.mts",
  "scripts": {
    "build": "tsc",
    "prepack": "npm run build",
    "format": "prettier --write src/**/* package.json tsconfig.json",
    "format:check": "prettier --check src/**/* package.json tsconfig.json"
  },
  "author": "Tim Wei√üenfels",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/svg-sprite": "^0.0.34",
    "esbuild": "^0.16.12",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "svg-sprite": "^2.0.2"
  }
}
